<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.fragment.MenuFragment"
    android:background="@color/white"
    android:padding="18dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_menu_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_menu_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_menu_setting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_menu_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_menu_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_menu_close"
        android:layout_marginEnd="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_menu_setting"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L.POINT 통합회원(정회원)으로 로그인하고,\n다양한 혜택을 확인하세요."
        android:textSize="12sp"
        android:textColor="#9C9C9C"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_btn_login"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>